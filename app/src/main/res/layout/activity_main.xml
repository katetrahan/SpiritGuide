<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context="com.example.guest.spiritguide.ui.MainActivity"
    android:background="@drawable/animation_list">

    <TextView
        android:id="@+id/frontPageTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userQuestionEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:text="Ask Me A Question"
        android:textSize="32sp"
        android:textColor="@color/colorTextIcons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

       />

    <EditText
        android:id="@+id/userQuestionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp"
        android:ems="15"
        android:hint="Enter any question you desire to have answered"
        android:inputType="textMultiLine"
        android:background="@color/colorTextIcons"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/getResponseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Ask"
        android:layout_marginBottom="100dp"
        android:background="@drawable/main_button"
        />

</RelativeLayout>
