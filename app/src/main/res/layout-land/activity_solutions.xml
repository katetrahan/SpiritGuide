<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/solutionsContainer"
    android:background="@drawable/solutions_animation_list"
    tools:context="com.example.guest.spiritguide.ui.SolutionsActivity">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Question"
        android:textColor="@color/colorTextIcons"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shakePhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resultTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="Shake for result"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/colorTextIcons"
        android:textSize="50sp" />



</RelativeLayout>